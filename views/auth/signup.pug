extends _layout

block vars
  include ../config
  - var key = "signup"
  - var page = pages[key]

block content
  main
    .auth-card.uk-card.uk-card-default.uk-card-body
      h3(class="uk-card-title") ユーザー登録
      form(action="/auth/signup" method="post")
        .uk-margin
          label(for="username" class="uk-form-label") ユーザー名
            .uk-form-controls
              input(type="text" name="username" class="uk-input")
        .uk-margin
          label(for="email" class="uk-form-label") メールアドレス
            .uk-form-controls
              input(type="text" name="email" class="uk-input")
        .uk-margin
          label(for="password" class="uk-form-label") パスワード
            .uk-form-controls
              input(type="password" name="password" class="uk-input")
        .uk-margin.submit
          button(type="submit" class="uk-button uk-button-primary uk-width-1-1") 登録する
      a(href="/auth/signin") Signin
  